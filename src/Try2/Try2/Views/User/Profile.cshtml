@model Try2.Models.DTOs.UserProfileDto

<style>
    .post-link {
        text-decoration: none;
        color: inherit;
    }

    .post-card {
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 12px;
        margin-bottom: 12px;
        background: white;
        cursor: pointer;
        transition: background 0.2s, box-shadow 0.2s;
    }

        .post-card:hover {
            background: #f9f9f9;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

    .post-header {
        font-size: 14px;
        margin-bottom: 6px;
    }

    .username {
        color: gray;
        margin-left: 6px;
    }

    .post-text {
        font-size: 16px;
        margin: 8px 0;
    }

    .post-footer {
        font-size: 13px;
        color: gray;
    }

</style>

<div class="profile-container">
    <div class="profile-header">
        <div class="avatar">👤</div>

        <div class="info">
            <h2>@Model.Nickname</h2>
            <p>@Model.Username</p>
            <p>@Model.Role</p>
            <p>@Model.Bio</p>

            <div class="stats">
                <span>Подписчики: @Model.FollowersCount</span>
                <span>Подписки: @Model.FollowingCount</span>
            </div>

            @if (!Model.IsCurrentUser)
            {
                <form method="post"
                      asp-action="@(Model.IsFollowedByCurrentUser ? "Unfollow" : "Follow")"
                      asp-route-userId="@Model.Id">
                    <button type="submit">
                        @(Model.IsFollowedByCurrentUser ? "Отписаться" : "Подписаться")
                    </button>
                </form>
            }
            else
            {
                <a asp-controller="Posts" asp-action="Create">Написать пост</a>
            }
        </div>
    </div>

    <hr />

    <div class="posts">
        @foreach (var post in Model.Posts)
        {
            <a asp-controller="Posts"
               asp-action="Details"
               asp-route-id="@post.Id"
               class="post-link">

                <div class="post-card">
                    <div class="post-header">
                        <strong>@post.AuthorNickname</strong>
                        <span class="username">@post.AuthorUsername</span>
                    </div>

                    <div class="post-text">
                        @post.Text
                    </div>

                    <div class="post-footer">
                        ❤️ @post.LikesCount
                        <span class="date">@post.PublicationDate.ToShortDateString()</span>
                    </div>
                </div>

            </a>
        }
    </div>
</div>
