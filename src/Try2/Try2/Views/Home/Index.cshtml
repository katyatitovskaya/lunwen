@using Try2.Models.DTOs
@model FeedDto

<h2>Лента</h2>

<div>
    <button onclick="showTab('all')">Все посты</button>
    <button onclick="showTab('subs')">Подписки</button>
</div>

<hr />


<div id="all" class="post-section">
    @foreach (var post in Model.AllPosts)
    {
        <a asp-controller="Posts"
           asp-action="Details"
           asp-route-id="@post.Id"
           class="post-link">

            <div class="post-card">
                <a href="@Url.Action("Profile", "User", new { id = post.AuthorId })">
                <div class="post-header">
                    
                    <!-- Фото пользователя -->
                    @if (!string.IsNullOrEmpty(post.AuthorProfilePhoto))
                    {
                        <img src="@post.AuthorProfilePhoto"
                             alt="Profile photo"
                             style="width:40px; height:40px; border-radius:50%; object-fit:cover;" />
                    }
                    else
                    {
                        <!-- Заглушка, если фото нет -->
                        <div style="width:40px; height:40px; border-radius:50%; background-color:#e0e0e0; display:flex; align-items:center; justify-content:center; font-size:20px; color:#666;">
                            @(post.AuthorNickname?.Substring(0, 1) ?? "?")
                        </div>
                    }

                    <!-- Информация об авторе -->
                    <div>
                        <strong>@post.AuthorNickname</strong>
                        <span class="username">@post.AuthorUsername</span>
                    </div>
                    
                </div>
                </a>

                <div class="post-text">
                    
                    <a asp-controller="Posts"
                       asp-action="Details"
                       asp-route-id="@post.Id"
                       style="text-decoration:none; color:inherit;">
                        <p>@post.Text</p>
                    </a>
                </div>

                <div class="post-footer">
                    ❤️ @post.LikesCount
                    <span class="date">@post.PublicationDate.ToShortDateString()</span>
                </div>
            </div>

        </a>
    }

</div>

<div id="subs" style="display:none">
    @if (Model.SubscriptionPosts == null)
    {
        <p>Войдите, чтобы видеть посты подписок</p>
        <a asp-controller="Account" asp-action="Login">Войти</a>
        <p>Нет аккаунта?</p>
        <a asp-controller="Account" asp-action="Register">Зарегистрируйтесь</a>
    }
    else if (!Model.SubscriptionPosts.Any())
    {
        <p>У вас пока нет подписок</p>
    }
    else
    {
        @foreach (var post in Model.SubscriptionPosts)
        {
            <a asp-controller="Posts"
               asp-action="Details"
               asp-route-id="@post.Id"
               class="post-link">

                <div class="post-card">
                    <a href="@Url.Action("Profile", "User", new { id = post.AuthorId })">
                        <div class="post-header">

                            <!-- Фото пользователя -->
                            @if (!string.IsNullOrEmpty(post.AuthorProfilePhoto))
                            {
                                <img src="@post.AuthorProfilePhoto"
                                     alt="Profile photo"
                                     style="width:40px; height:40px; border-radius:50%; object-fit:cover;" />
                            }
                            else
                            {
                                <!-- Заглушка, если фото нет -->
                                <div style="width:40px; height:40px; border-radius:50%; background-color:#e0e0e0; display:flex; align-items:center; justify-content:center; font-size:20px; color:#666;">
                                    @(post.AuthorNickname?.Substring(0, 1) ?? "?")
                                </div>
                            }

                            <!-- Информация об авторе -->
                            <div>
                                <strong>@post.AuthorNickname</strong>
                                <span class="username">@post.AuthorUsername</span>
                            </div>

                        </div>
                    </a>

                    <div class="post-text">

                        <a asp-controller="Posts"
                           asp-action="Details"
                           asp-route-id="@post.Id"
                           style="text-decoration:none; color:inherit;">
                            <p>@post.Text</p>
                        </a>
                    </div>

                    <div class="post-footer">
                        ❤️ @post.LikesCount
                        <span class="date">@post.PublicationDate.ToShortDateString()</span>
                    </div>
                </div>

            </a>
        }

    }
</div>

<script>
    function showTab(tab) {
        document.getElementById("all").style.display = tab === "all" ? "block" : "none";
        document.getElementById("subs").style.display = tab === "subs" ? "block" : "none";
    }
</script>
